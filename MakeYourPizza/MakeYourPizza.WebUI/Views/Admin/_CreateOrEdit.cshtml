@model MakeYourPizza.WebUI.Models.IngredientSelectListViewModel

<div class="form-group">
    <label>Name:</label>
    @Html.TextBoxFor(m => m.Ingredient.Name, new { @class = "form-control"})
</div>

<div class="form-group">
    <label>Price</label>
    @Html.TextBoxFor(m => m.Ingredient.Price, new { @class = "form-control"})
</div>

<div class="form-group">
    <div style="position:relative">
        <label>Image</label>
        <a class="btn" href="javascript:;">
            Choose file...
            <input type="file" name="file" size="40" style="position:absolute;z-index:2;top:0;left:0;opacity:0;background-color:transparent;color:transparent" onchange='jQuery("#upload-file-info").html(jQuery(this).val());' />
        </a>
        <span class="label label-info" id="upload-file-info"></span>
        @if (File.Exists(Server.MapPath("~/Content/Images/" + Model.Ingredient.Imagename)))
        {
            <img src="@Url.Content("~/Content/Images/" + Model.Ingredient.Imagename)" alt="Picture of @Model.Ingredient.Name" width="120" />
        }        
    </div>
</div>

<div class="form-group">
    <label>Category</label>
    @Html.DropDownListFor(m => m.Ingredient.CategoryId, Model.Categories, "Choose a category", new { @class = "form-control" })
</div>