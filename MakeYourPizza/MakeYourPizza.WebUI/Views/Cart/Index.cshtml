@using MakeYourPizza.Domain.Entities;
@model MakeYourPizza.WebUI.Models.CartIndexViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Pizza ingredients</h3>
    </div>
    <div class="panel-body">

        @if (Model.Cart.CountItems > 0)
        {
            foreach (CartLine line in Model.Cart)
            {
                <p>@line.Product.Name</p>
            }

            <p>Total: $@Model.Cart.ComputeTotalValue()</p>
            <p>
                @*<form action="" method="post">*@
            <p><button class="btn btn-info" type="submit">Place order</button></p>
            @*</form>*@
            </p>
        }
        else
        {
            <p>Your cart is empty: drag ingredients to the left container. After that, click the dragged item to remove it from selected items.</p>
        }


    </div>

</div>
 