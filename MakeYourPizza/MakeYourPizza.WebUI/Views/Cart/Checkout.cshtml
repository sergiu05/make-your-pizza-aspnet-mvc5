@model MakeYourPizza.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Checkout";
}

<div class="row">
    <div class="col-md-4 col-md-offset-3">

        <h2>Checkout</h2>
        <p>Please enter your details, and we'll ship your pizza right away!</p>

        @using (Html.BeginForm())
        {
            <h3>Ship to</h3>
            <div class="form-group">
                <label>Name: </label>
                @Html.TextBoxFor(x => x.Username, new { @readonly = "readonly", @class = "form-control"})
            </div>
            <h3>Address</h3>
            <div class="form-group">
                <label>Address:</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label>City:</label>
                @Html.TextBoxFor(x => x.City, new { @class = "form-control"})
            </div>
            <div class="form-group">
                <label>Phone:</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control"})
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Complete order" />
            </div>
        }
    </div>
</div>

